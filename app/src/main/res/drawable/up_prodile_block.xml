<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>
            <gradient android:angle="90.0" android:endColor="#fa5644" android:startColor="#fad461" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>/>
            <gradient android:angle="90.0" android:endColor="#fa5644" android:startColor="#fad461" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp" android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>/>
            <gradient android:angle="180.0" android:endColor="#fa5644" android:startColor="#fad461" />
        </shape>
    </item>
</selector>
