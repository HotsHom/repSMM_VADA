        <shape android:shape="rectangle">
            <corners android:radius="0dp" android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>
            <solid android:color="#fff"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>/>
            <solid android:color="#fff"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp" android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>/>
            <solid android:color="#fff"/>
        </shape>
    </item>
</selector>
