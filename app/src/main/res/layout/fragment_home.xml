<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.mainScreen.homePage.HomeFragment"
        android:background="#20262b">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="#15181B"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/radius_circle_white"
                        android:src="@drawable/ic_home_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Напиши что ты хочешь и запости одним кликом в Twitter и Vk"
                        android:textSize="17sp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Мы собрали статистику за день с ваших подключенных аккаунтов, посмотрите, что произошло в ваших аккаунтах "
                        android:layout_marginHorizontal="20dp"
                        android:textColor="#B3B1B1"
                        android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/radius_block_white"
                android:layout_marginTop="200dp"
                android:layout_marginHorizontal="20dp"
                android:paddingVertical="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:background="@drawable/eye"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:id="@+id/view_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#20262b"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="50dp">

                    <ImageView
                        android:background="@drawable/team"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#20262b"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:background="@drawable/like"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#20262b"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="290dp">

                <Button
                    android:id="@+id/btnCreatePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Написать пост"
                    android:background="@drawable/butt_style_color_low_radius"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:onClick="showCreatePost"/>


                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginHorizontal="20dp">

                                <LinearLayout
                                    android:layout_width="250dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/radius_block_white"
                                    android:orientation="vertical"
                                    android:layout_marginRight="30dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title_news"
                                        android:textColor="#000"
                                        android:gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:textSize="15sp"
                                        android:layout_marginHorizontal="10dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer condimentum sit amet tortor eget mattis. Etiam aliquam, sapien vel accumsan ultricies, lacus ex bibendum orci, rutrum mattis lorem dui et dui. Orci varius natoque. Phasellus felis ligula, accumsan at purus eget, condimentum iaculis magna. Nullam pretium euismod mattis. Cras dui eros, congue eget sem quis, sollicitudin sodales ipsum. Vivamus pulvinar sodales semper."
                                        android:textColor="#303030"
                                        android:textSize="12sp"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"/>

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:text="Подробнее"
                                        android:textAllCaps="true"
                                        android:background="@drawable/butt_style_color_low_radius"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginVertical="10dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="250dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/radius_block_white"
                                    android:orientation="vertical"
                                    android:layout_marginRight="30dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Title_news"
                                        android:textColor="#000"
                                        android:gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:textSize="15sp"
                                        android:layout_marginHorizontal="10dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer condimentum sit amet tortor eget mattis. Etiam aliquam, sapien vel accumsan ultricies, lacus ex bibendum orci, rutrum mattis lorem dui et dui. Orci varius natoque. Phasellus felis ligula, accumsan at purus eget, condimentum iaculis magna. Nullam pretium euismod mattis. Cras dui eros, congue eget sem quis, sollicitudin sodales ipsum. Vivamus pulvinar sodales semper."
                                        android:textColor="#303030"
                                        android:textSize="12sp"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"/>

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:text="Подробнее"
                                        android:textAllCaps="true"
                                        android:background="@drawable/butt_style_color_low_radius"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginVertical="10dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="250dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/radius_block_white_transponent"
                                    android:orientation="vertical"
                                    android:layout_marginRight="30dp"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Хотите увидеть больше новостей?"
                                        android:textColor="#FFFFFF"
                                        android:gravity="center"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="10dp"
                                        android:textSize="18sp"
                                        android:layout_marginHorizontal="10dp"/>

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:text="посмотреть"
                                        android:textAllCaps="true"
                                        android:background="@drawable/butt_style_color_low_radius"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginVertical="10dp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </ScrollView>
                    </HorizontalScrollView>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>