<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/image_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:background="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РЕГИСТРАЦИЯ"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#50515F"
                android:text="Nickname"
                android:textAllCaps="true"
                android:layout_marginRight="10dp"/>

            <EditText
                android:padding="5dp"
                android:textColor="#fff"
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edit_style_white"
                android:inputType="text" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#50515F"
                android:text="PASSWORD"
                android:textAllCaps="true"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/pass1"
                android:padding="5dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edit_style_white"
                android:breakStrategy="simple"
                android:inputType="textPassword" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#50515F"
                android:text="PASSWORD"
                android:textAllCaps="true"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/pass2"
                android:padding="5dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edit_style_white"
                android:inputType="textPassword" />

        </LinearLayout>

        <TextView
            android:layout_marginHorizontal="20dp"
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#fff"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ИЛИ ЗАРЕГИСТРИРУЙТЕСЬ ЧЕРЕЗ"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/vk_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:onClick="VKLogin"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/butt_style_color"
            android:text="ЗАРЕГИСТРИРОВАТЬСЯ"
            android:layout_marginTop="50dp"
            android:onClick="onMyButtonClick"/>

    </LinearLayout>

</ScrollView>